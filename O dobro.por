programa {
  funcao inicio() {
    cadeia nome
    inteiro n1, n2, soma
    escreva ("Digite um nome: ")
    leia(nome)
    escreva ("Digite o primeiro valor:")
    leia(n1)
    escreva ("Digite o segundo valor:")
    leia(n2)
    soma=n1+n2
    escreva("O valor da soma é: ", soma, " para você ", nome)
  }
}
